{
  "name": "joplin-blog",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "lerna clean -y && rm -rf node_modules",
    "setup": "lerna run pub --include-dependencies --stream"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "examples/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --ignore-path .eslintignore --write",
      "git add"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "@liuli-util/cli": "^3.2.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  }
}
